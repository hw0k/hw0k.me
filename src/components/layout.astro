---
import { ViewTransitions } from 'astro:transitions';
import ChangeTheme from './change-theme.astro';

interface Props {
  pageTitle?: string;
}

const { pageTitle } = Astro.props;
const title = [pageTitle, 'hw0k.me'].filter(Boolean).join(' | ');
---

<html lang="ko" transition:animate="none">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <ViewTransitions />
	</head>
	<body class="flex flex-col min-h-screen bg-white dark:bg-gray-900 text-black dark:text-gray-300">
		<header class="w-screen">
			<div class="container mx-auto flex flex-row justify-between items-center h-16">
				<div class="flex justify-start items-center">
					<a class="text-xl font-bold hover:underline" href="/">hw0k.me</a>
				</div>
				<div class="flex justify-start items-center gap-3">
					<a class="hover:underline" href="/about">about</a>
          <ChangeTheme />
				</div>
			</div>
		</header>
		<main class="mt-4 flex-1">
			<slot />
		</main>
		<footer class="mt-4 mb-4">
			<div class="container mx-auto text-xs leading-relaxed text-gray-500 hover:*:text-gray-800 dark:hover:*:text-gray-300">
        <a class="hover:underline" href="/feed.xml">RSS</a> | 
        <a class="hover:underline" href="/sitemap.xml">Sitemap</a> | 
        <a class="hover:underline" href="https://github.com/hw0k/hw0k.me">Source code</a>
        <br />
        <a class="hover:underline" href="mailto:hw0knam@gmail.com">hw0knam@gmail.com</a> | 
        <a class="hover:underline" href="https://github.com/hw0k">GitHub</a> |
        <a class="hover:underline" href="https://linkedin.com/in/hw0k">LinkedIn</a>
      </div>
		</footer>
	</body>
</html>
